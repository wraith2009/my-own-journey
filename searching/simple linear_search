
#include <iostream>
using namespace std;
//declaring function for simple linear seacrh

int linear_search(int arr[], int size ,int key){
    for(int i=0;i<size;i++){
        if(key==arr[i]){
            return i;
        }
    }
    return -1;
}
int main() {
    int array[]={1,5,32,55,3,2,78};
    cout<<linear_search(array,7,78);
    return 0;
}
