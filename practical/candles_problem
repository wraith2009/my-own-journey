// Online C++ compiler to run C++ program online
#include <bits/stdc++.h>
using namespace std;
int main() {
    int count=0;
int n;
cin>>n;
vector <int> arr(n);
for(int i=0;i<n;i++){
    cin>>arr[i];
}
int max=*max_element(arr.begin(),arr.end());
for(int i=0;i<n;i++){
    if(arr[i]==max){
        count++;
    }
    
}
cout<<count;
    return 0;
}
